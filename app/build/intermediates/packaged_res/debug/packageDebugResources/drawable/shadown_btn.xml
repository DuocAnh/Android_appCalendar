<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Đổ bóng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#70C0F8F8" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:bottom="6dp" android:left="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#3D5AFE" />
            <stroke
                android:width="1.5dp"
                android:color="#5FE0EF" />
        </shape>
    </item>
</layer-list>
