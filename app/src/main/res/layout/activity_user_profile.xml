<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.task.UserProfile"
    android:background="#4319D8ED">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:text="Your Profile"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginEnd="160dp"
        android:drawableLeft="@drawable/baseline_account_box_24"
        android:gravity="center_vertical"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

    <TextView
        android:id="@+id/tvPasswordUser"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="104dp"
        android:gravity="center_vertical"
        android:hint="Your Password"
        android:textColor="#FF9100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageUser"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailUser"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginEnd="160dp"
        android:drawableLeft="@drawable/lock_24"
        android:gravity="center_vertical"
        android:text=" Key "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/tvNameUser"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:hint="Your Name"
        android:textColor="#FF9100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginEnd="160dp"
        android:drawableLeft="@drawable/email_24"
        android:gravity="center_vertical"
        android:text=" Email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <TextView
        android:id="@+id/tvEmailUser"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="28dp"
        android:gravity="top|center_vertical"
        android:hint="Your Email Address"
        android:textColor="#FF9100"
        app:layout_constraintStart_toEndOf="@+id/imageUser"
        app:layout_constraintTop_toBottomOf="@+id/tvNameUser" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="134dp"
        android:layout_height="131dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.002"
        app:srcCompat="@drawable/user_avater" />

    <Button
        android:id="@+id/btnlogOutUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn_2"
        android:text="LOGOUT"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.869" />

    <Button
        android:id="@+id/btnMessageVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:background="#76F30E"
        android:text="Verifile Now"
        android:textColor="#D55D5D"
        android:visibility="invisible"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />


    <TextView
        android:id="@+id/tvMessageVerification"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="104dp"
        android:gravity="center"
        android:text="Email Not Verified !"
        android:textColor="@color/messes_err"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnMessageVerification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.651" />

    <TextView
        android:id="@+id/tv_addImageYP"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:background="@color/star_color"
        android:drawableStart="@drawable/add"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="6dp"
        android:text="Add image"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436">
    </TextView>

    <TextView
        android:id="@+id/tv_resetPasswordYP"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:background="@color/star_color"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingStart="6dp"
        android:text="Reset Password"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addImageYP"
        app:layout_constraintVertical_bias="0.015"
        tools:ignore="MissingConstraints">
    </TextView>

    <ImageButton
        android:id="@+id/img_buttonback"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064"
        android:background="@drawable/ic_back_24" />

</androidx.constraintlayout.widget.ConstraintLayout>