<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.task.MainSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#FEFEFE">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:weightSum="10"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="-20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@drawable/backgroundoclock">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="-30dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="MASTERY"
                android:textColor="#2F9FE5"
                android:letterSpacing="0.04"
                android:textSize="29sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="TIME"
                android:textColor="#2F9FE5"
                android:letterSpacing="0.8"
                android:textSize="29sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="37sp"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It's easier to sign up now"
                android:textColor="#777474"
                android:textSize="15sp">
            </TextView>
            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:elevation="8dp">
                <Button
                    android:id="@+id/btn_Facebook_SU"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:background="@drawable/custom_btn">
                </Button>
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/facebook"
                    app:tint="@color/white">
                </ImageView>
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Facebook"
                    android:textSize="15sp">
                </TextView>
            </RelativeLayout>
            <Button
            android:id="@+id/btn_Phone_SU"
            android:layout_marginTop="20dp"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:text="I'll use email or phone"
            app:backgroundTint="@null"
            android:gravity="center"
            android:padding="0dp"
            android:background="@drawable/custom_edt"
            android:textColor="#5E5B5B"
            android:textSize="15sp"/>
            <RelativeLayout
                android:paddingRight="130dp"
                android:paddingLeft="130dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imbtn_twith"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/twitter"
                    android:layout_width="28dp"
                    android:layout_height="28dp">
                </ImageButton>
                <ImageButton
                    android:id="@+id/imbtn_google"
                    android:layout_centerInParent="true"
                    android:background="@drawable/google_plus"
                    android:layout_width="28dp"
                    android:layout_height="28dp">
                </ImageButton>
                <ImageButton
                    android:layout_alignParentRight="true"
                    android:id="@+id/imbtn_linkdin"
                    android:layout_centerInParent="true"
                    android:background="@drawable/linkedin"
                    android:layout_width="28dp"
                    android:layout_height="28dp">
                </ImageButton>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already have account?"
                    android:layout_marginRight="5dp">
                </TextView>
                <TextView
                    android:id="@+id/tv_Login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#3D5AFE">
                </TextView>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>