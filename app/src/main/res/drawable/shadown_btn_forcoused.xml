<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Đổ bóng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3D5AFE" /> <!-- Màu đổ bóng với độ trong suốt -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:top="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#3D5AFE" />
            <stroke
                android:width="1.5dp"
                android:color="#FF9100" />
        </shape>
    </item>
</layer-list>
